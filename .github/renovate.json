{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "assigneesFromCodeOwners": true,
  "flux": {
    "fileMatch": [
      "^k8s/.+\\.ya?ml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "^k8s/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "^k8s/.+\\.ya?ml$"
    ]
  },
  "github-actions": {
    "enabled": false
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "ignorePaths": [
    "k8s/bases/infrastructure/cluster-policies/samples"
  ]
}
